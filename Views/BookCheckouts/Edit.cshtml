@model Bibblan.Models.BookCheckout

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BookCheckout</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookCheckoutId" />
            <div class="form-group">
                <label asp-for="FkCustomerId" class="control-label"></label>
                <select asp-for="FkCustomerId" class="form-control" asp-items="ViewBag.FkCustomerId">
                </select>
                <span asp-validation-for="FkCustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FkBookId" class="control-label"></label>
                <select asp-for="FkBookId" class="form-control" asp-items="ViewBag.FkBookId">
                </select>
                <span asp-validation-for="FkBookId" class="text-danger"></span>
            </div>
